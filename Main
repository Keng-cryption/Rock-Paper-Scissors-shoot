import random
guessed = False
while not guessed:
  Q = input("Rock, paper, scissors, shoot:")
  W = random.randint(1, 3)
  if Q == "rock" and W == 1:
    print("You chose rock, the computer chose rock,")
    print("Tie!")
    E = input("press space to play again press X if not:")
    if E == " ":
      guessed = False
    elif E == "X":
      guessed = True
    else:
      print("That is not a valid answer")
      guessed = False
      while not guessed:
        E = input("press space to play again press X if not:")
        if E == "X":
          exit()
        elif E == " ":
          break
        else:
          print("That is not a valid answer")
          Guessed = True
